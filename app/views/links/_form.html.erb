<%= form_for(link) do |f| %>
	<%= f.hidden_field :user_id, value: current_user.id %>
	<label>Title: </label><%= f.text_field :title %><br /><br />
	<label>Description: </label><%= f.text_area :description %><br /><br />
  <label>URL: </label><%= f.text_field :url %><br /><br />
	<% @tags.each do |tag| %>
		<%= check_box_tag "link[tag_ids][]", tag.id, link.tags.include?(tag) %><%= tag.name %><br />
	<% end %>
	<br />
  <%= f.submit "Save" %>
<% end %>