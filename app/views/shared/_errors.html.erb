<div class="flash-messages">
  <% if flash.any? %>
    <% flash.each do |message_type, message| %>
      <% if message.is_a? Array %>
        <% message.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      <% else %>
        <%= message.html_safe %>
      <% end %>
    <% end %>
  <% end %>
</div>