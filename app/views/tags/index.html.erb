<h2>Tags</h2>
<%= render partial: "shared/errors", locals: {object: @tag} %>
<table border="1">
  <tr>
    <th>Tag</th>
    <th colspan="2">Actions</th>
  </tr>
  <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.name %></a></td>
      <td><%= link_to "Edit", edit_tag_path(tag) %></td>
      <td><%= link_to "Delete", tag_path(tag), method: :delete %></td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to "Add New Tag", new_tag_path %>